{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Status</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Pseudo</th>
                <th>AlchemistLevel</th>
                <th>AlchemistTool</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.roles ? customer.roles|json_encode : '' }}</td>
                <td>{{ customer.password }}</td>
                <td>{{ customer.status }}</td>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ customer.updatedAt ? customer.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ customer.pseudo }}</td>
                <td>{{ customer.alchemistLevel }}</td>
                <td>{{ customer.alchemistTool }}</td>
                <td>
                    <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('customer_new') }}">Create new</a>
{% endblock %}
